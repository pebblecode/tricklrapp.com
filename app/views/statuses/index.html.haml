=render :partial => 'form'

%section#modal-edit.modal
  %form{"accept-charset" => "UTF-8", :method => "post"}
    %textarea{:name => "status[status]"}
    %input{:type => "hidden", :name => "utf8", :value => "&#x2713;"}
    %input{:type => "hidden", :name => "_method", :value => "put"}
    %input{:type => "submit", :value => "submit"}
  
    

%ul#view-links
  %li.queued-statuses.selected
    =link_to "Queue", root_path
  %li.published-statuses
    =link_to "Published", published_path
  
%section.status-lists
  -if @queued_statuses.present?
    %ul#queued_statuses.status-list
      =render @queued_statuses

  -if @published_statuses.present?
    %ul#published_statuses.status-list
      = render @published_statuses

